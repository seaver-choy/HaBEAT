<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#fffff9ef"
    tools:context="com.jtbmilan.habeat.selfhelp.deepbreathing.DeepBreathingActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp">

        <View android:layout_width="272dp"
            android:layout_height="275dp"
            android:background="@drawable/circle"
            android:id="@+id/breathVisualization" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1"
            android:id="@+id/breathCntrTxt"
            android:layout_gravity="center"
            android:phoneNumber="true"
            android:textSize="60sp"
            android:textStyle="bold"
            android:textColor="#fff7ffeb" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="INHALE"
        android:id="@+id/breathModeTxt"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="64dp"
        android:capitalize="characters"
        android:textColor="#ff090707"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Inhale with the nose; and exhale with the mouth."
        android:id="@+id/footnoteTxt1"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Repeat until desired."
        android:id="@+id/footnoteTxt2"
        android:layout_below="@+id/footnoteTxt1"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_blue_dark" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back_btn_lbl"
        android:id="@+id/backBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickBackBtn" />


</RelativeLayout>
